{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2022",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowJs": true,
		"types": ["jest", "node"]
	},
	"include": ["src/**/*.ts", "src/index.ts"],
	"exclude": ["node_modules", "dist"]
}
