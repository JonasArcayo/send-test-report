		"clean": "rm -rf dist",
		"lint": "eslint src --ext .ts",
		"test": "jest",
		"prep": "npm run clean || npm run build"
	},
	"keywords": [
		"slack",
		"teams",
		"test-report",
		"ci",
		"ctrf",
		"bitbucket",
		"github-actions",
		"circleci"
	],
	"author": "Jonas Arcayo",
	"license": "MIT",
	"devDependencies": {
		"@types/jest": "^29.5.6",
		"@typescript-eslint/eslint-plugin": "^8.29.1",
		"eslint": "^8.55.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.2",
		"typescript": "^5.4.0"
	},
	"dependencies": {
		"@types/minimist": "^1.2.5",
		"minimist": "^1.2.5",
		"node-fetch": "^3.3.2"
	},
	"engines": {
		"node": ">=18"
	}
